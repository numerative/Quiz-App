<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Questions">
        <!--Style for questions.-->
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:textColor">@color/text_questions</item>
        <item name="android:padding">@dimen/regular_gap</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Answers">
        <!--Style for Answers.-->
        <item name="android:paddingLeft">@dimen/regular_gap</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:textColor">@color/text_answers</item>
    </style>

</resources>
